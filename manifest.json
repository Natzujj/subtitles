{
  "manifest_version": 3,
  "name": "Real-Time Subtitles",
  "version": "1.0",
  "description": "Exibe legendas em tempo real do Ã¡udio da aba.",
  "permissions": ["storage", "activeTab", "scripting", "tabCapture"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*.woff2"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/icon.png"
  }
}
